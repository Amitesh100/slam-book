<%- include("partials/header.ejs") %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <header class="jumbotron">
                <h1 id="head" class="pad">Take A Look</h1>
                <p class="pad">“There is no friend as loyal as a book.” ― Ernest Hemingway</p>
                <a href="/books/new" id="newBtn" class="ui inverted black button">New Entry</a>
            </header>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 decorate">
            <div class="ui divided items">
                <% slams.forEach(function(slam){ %>
                    <div class="index">
                        <div>
                            <h3><%= slam.nameAgain %></h3>
                        </div>
                        <div>
                            <h6><%= slam.dated.toDateString() %></h6>
                        </div>
                        <a id="view" href="/books/<%= slam._id %>" class="ui inverted blue button">View</a>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>


<a id="home" href="/"><button class="ui black button">Home</button></a>

